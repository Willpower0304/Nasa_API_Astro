---
import Logo from '../assets/logo.png';

import Facebook from '../assets/f.svg';
import Instagram from '../assets/i.svg';
import Twitter from '../assets/x.svg';
import Youtube from '../assets/y.svg';
---

<footer>
    <div class="top_footer">
        <img src={Logo.src} alt="Logo" />
    </div>
    <div class="top_middle">
        <div class="top_midldle_left">
            <h3>National Aeronautics and Space Administration</h3>
            <p>NASA explores the unknown in air and space, innovates for the benefit of humanity, and inspires the world through discovery.</p>
            <a href="#">About NASA's Mission</a>
            <a href="#" class="join">Join Us</a>
        </div>
        <div class="top_middle_middle">
            <div class="list_left">
                <ul>
                <a href="#">Home</a>
                </ul>
                <ul>
                    <a href="#">News & Events</a>
                </ul>
                <ul>
                    <a href="#">Multimedia</a>
                </ul>
                <ul>
                    <a href="#">NASA+</a>
                </ul>
                <ul>
                    <a href="#">Missions</a>
                </ul>
            </div>

            <div class="list_middle">
                <ul>
                    <a href="#">Humans in Space</a>
                </ul>
                <ul>
                    <a href="#">Earth</a>
                </ul>
                <ul>
                    <a href="#">The Solar System</a>
                </ul>
                <ul>
                    <a href="#">The Universe</a>
                </ul>
                <ul>
                    <a href="#">Science</a>
                </ul>
            </div>

            <div class="list_right">
                <ul>
                    <a href="#">Aeronautics</a>
                </ul>
                <ul>
                    <a href="#">Technology</a>
                </ul>
                <ul>
                    <a href="#">Learning Resources</a>
                </ul>
                <ul>
                    <a href="#">About NASA</a>
                </ul>
                <ul>
                    <a href="#">NASA en EspanÌƒol</a>
                </ul>
            </div>
            
        </div>

        <div class="top_Middle_right">
            <p>Follow NASA</p>
            <div class="social_media">
                <a href="#"><img src={Facebook.src} alt="Facebook icon"></a>
                <a href="#"><img src={Instagram.src} alt="Instagram icon"></a>
                <a href="#"><img src={Twitter.src} alt="Twitter icon"></a>
                <a href="#"><img src={Youtube.src} alt="Youtube icon"></a>
            </div>
                <a href="#">More NASA Social Accounts</a>
                <a href="#">NASA Newsletters</a>
        </div>

    </div>

    <hr>

    <div class="top_bottom">
        <div class="list_top_bottom">
            <a href="#">Sitemap</a>
            <a href="#">For Media</a>
