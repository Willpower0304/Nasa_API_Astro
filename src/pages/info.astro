---
export const prerender = false; 

import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const API_KEY = import.meta.env.NASA_API_KEY || "DEMO_KEY";
const date = Astro.url.searchParams.get('date');

let apod = null;
let error = null;

if (date) {
  try {
    const r = await fetch(`https://api.nasa.gov/planetary/apod?api_key=${API_KEY}&date=${date}&thumbs=true`);
    if (!r.ok) throw new Error(`NASA API error: ${r.status}`);
    apod = await r.json();
  } catch (e) {
    error = (e as Error).message;
  }
} else {
  error = 'Falta el par√°metro "date" en la URL ';
}
---

<Layout title={apod ? apod.title : "Info"}>
  <main>
    <div class="navbar">
      <Navbar />
    </div>
    <div class="Main_content">
      {error ? (
        <>
          <h1>APOD</h1>
          <p>{error}</p>
        </>
      ) : (
        apod && (
          <>
            <div class="content_left">
              <h1>{apod.title}</h1>
              <p class="date_apod"><strong>Date:</strong> {apod.date}</p>
              <p>{apod.explanation}</p>
            </div>
            
            <div class="content_right">
              {apod.media_type === 'image' ? (
                <img src={apod.hdurl || apod.url} alt={apod.title} loading="eager" />
              ) : (
                <div>
                  <iframe
                    src={apod.url}
                    title={apod.title}
                    allowfullscreen
                    loading="eager"
                  ></iframe>
                </div>
              )}

              <ul>
                {apod.copyright && (
                  <li><strong>Copyright:</strong> {apod.copyright}</li>
                )}
                {apod.service_version && (
                  <li><strong>Service version:</strong> {apod.service_version}</li>
                )}
              </ul>
            </div>
          </>
        )
      )}
    </div>
    <Footer />
  </main>
</Layout>

<style>

  .navbar {
    top: 0;
    z-index: 1000;
    background-color: #000000;
  }

  .Main_content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 3rem;
    padding: 5rem 4rem;
  }

  .content_left {
    flex: 1;
    max-width: 50%;
  }

  .content_left h1 {
    font-family: 'Roboto-Bold', sans-serif;
    margin: 0rem 0rem 0rem;
    font-size: 4rem;
  }

  .content_left .date_apod {
    margin: 0.5rem 0rem 1.5rem;
    color: #9e9e9e;
  }

  .content_left p {
    margin-bottom: 1rem;
    line-height: 1.6;
    color: #444444;
    max-width: 60ch;
  }

  .content_right {
    flex: 1;
    max-width: 50%;
  }

  .content_right img {
    width: 100%;
    height: 500px;
    object-fit: cover;
  }

  .content_right iframe {
    width: 100%;
    height: 315px;
    border: none;
  }

  .content_right ul {
    font-size: 0.9rem;
    list-style: none;
    padding: 0;
    margin-top: 1rem;
  }

  .content_right ul li {
    font-family: 'Roboto-italic', sans-serif;
    margin-bottom: 0.5rem;
    color: #777777;
  }

  @media (max-width: 1100px) {
    .Main_content {
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 4rem 2rem;
      gap: 3rem;
    }

    .content_left, .content_right {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      max-width: 100%;
    }
    .content_left p {
      max-width: 90%;
      text-align: start;
    }
    .content_right img {
      height: 350px;
    }
  }

  @media (max-width: 700px) {
    .navbar {
      padding-bottom: 1rem;
    }

    .Main_content {
      flex-direction: column;
      padding: 4rem 2rem;
      gap: 1.2rem;
    }
    .content_left h1 {
      font-size: 2.2rem;
    }
    .content_right img {
      height: 300px;
    }
    .content_right iframe {
      height: 180px;
    }
  }

  @media (max-width: 500px) {
    .Main_content {
      padding: 3rem 1rem;
      gap: 0.7rem;
    }
    .content_left h1 {
      font-size: 2rem;
    }
    .content_left p,
    .content_left .date_apod {
      font-size: 1rem;
    }
    .content_right img {
      height: 210px;
    }
    .content_right iframe {
      height: 100px;
    }
  }
</style>